<view>
  <view>
    <input id="search" placeholder="txhash/address/block" />
  </view>
</view>

<view>
  <view class="table">
    <!--text>数字账户</text-->
    <scroll-view scroll-x style="width: 100%">
    <block wx:for="{{ blocks }}" wx:key="{{address}}">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}" bindtap='selectBlock'>
        <view >编号: {{ index + 1}}</view>
        <view >地址: {{ item.address }}</view>
        <view >余额: {{ item.balance }}</view>
        <view >占比: {{ item.percentage }}</view>
        <view >交易记录:{{item.txCount }}</view>
      </view>
      <view class="tr" wx:else bindtap='selectBlock'>
        <view class="td">编号: {{ index + 1}}</view>
        <view class="td">地址: {{ item.address }}</view>
        <view class="td">余额: {{ item.balance }}</view>
        <view class="td">占比: {{ item.percentage }}</view>
        <view class="td">交易记录:{{item.txCount }}</view>
      </view>
    </block>
    </scroll-view>
  </view>
</view>
